{
  "name": "nodestatus",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "https://github.com/cokemine/nodestatus.git",
  "author": "Kagurazaka Mizuki",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postbuild": "node scripts/postbuild.js",
    "app:main": "pnpm --filter=nodestatus-*",
    "app:server": "pnpm --filter=nodestatus-server",
    "app:cli": "pnpm --filter=nodestatus-cli",
    "dev": "npm run app:server dev",
    "start": "npm run app:server start",
    "build": "npm run app:main build",
    "publish": "npm run build && npm run app:main publish",
    "lint": "eslint . --ext .js --ext .ts --ignore-pattern build --ignore-pattern dist --fix"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.5",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-run": "^2.1.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vercel/nft": "^0.13.1",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "fs-extra": "^10.0.0",
    "rollup": "^2.56.3",
    "rollup-plugin-delete": "^2.0.0",
    "typescript": "^4.4.3"
  }
}
